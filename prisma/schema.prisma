generator client {
	provider = "prisma-client-js"
}

datasource db {
	provider = "mysql"
	url      = env("DATABASE_URL")
}

model User {
	id    String     @id
}

model Company {
	businessName String   		@id
	serviceCRAs  Report[]    	@relation("ServiceProvider")
	clientCRAs   Report[]    	@relation("Client")
}

model Activity {
	id       	String       		@id @default(uuid(4))
	date     	DateTime
	timeWorked 	TimeWorked
	report      Report          	@relation(fields: [reportId], references: [id], name: "CRA-activities")
	reportId    String
	comment		String?
}

model Report {
	id                	String		@id @default(uuid(4))
	serviceProvider   	Company    	@relation(fields: [serviceProviderId], references: [businessName], name: "ServiceProvider")
	serviceProviderId 	String
	client            	Company    	@relation(fields: [clientId], references: [businessName], name: "Client")
	clientId          	String
	monthReport       	DateTime
	activities        	Activity[] 	@relation("CRA-activities")
	comment				String?
}

enum TimeWorked {
	FULL_DAY
	HALF_DAY
}
